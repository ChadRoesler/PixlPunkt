<Window
    x:Class="PixlPunkt.UI.Settings.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PixlPunkt.UI.Settings"
    xmlns:ic="using:FluentIcons.WinUI"
    Title="Settings">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Left nav -->
        <Border Grid.Column="0" Grid.RowSpan="2" 
                Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="0,0,1,0">
            <ListBox x:Name="NavList" 
                     SelectionMode="Single" 
                     Background="Transparent"
                     Padding="8">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBoxItem>
                    <ListBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Padding="4">
                            <ic:FluentIcon Icon="AppGeneric" />
                            <TextBlock Text="General" Margin="8,0,8,0"/>
                        </StackPanel>
                    </ListBoxItem.Content>
                </ListBoxItem>
                <ListBoxItem>
                    <ListBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Padding="4">
                            <ic:FluentIcon Icon="Keyboard" />
                            <TextBlock Text="Shortcuts" Margin="8,0,8,0"/>
                        </StackPanel>
                    </ListBoxItem.Content>
                </ListBoxItem>
                <ListBoxItem>
                    <ListBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Padding="4">
                            <ic:FluentIcon Icon="DockRow" />
                            <TextBlock Text="Palette" Margin="8,0,8,0"/>
                        </StackPanel>
                    </ListBoxItem.Content>
                </ListBoxItem>
                <ListBoxItem>
                    <ListBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Padding="4">
                            <ic:FluentIcon Icon="Grid" />
                            <TextBlock Text="Tiles" Margin="8,0,8,0"/>
                        </StackPanel>
                    </ListBoxItem.Content>
                </ListBoxItem>
                <ListBoxItem>
                    <ListBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Padding="4">
                            <ic:FluentIcon Icon="PaintBrush" />
                            <TextBlock Text="Brushes" Margin="8,0,8,0"/>
                        </StackPanel>
                    </ListBoxItem.Content>
                </ListBoxItem>
                <ListBoxItem>
                    <ListBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Padding="4">
                            <ic:FluentIcon Icon="DocumentFit" />
                            <TextBlock Text="Templates" Margin="8,0,8,0"/>
                        </StackPanel>
                    </ListBoxItem.Content>
                </ListBoxItem>
                <ListBoxItem>
                    <ListBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Padding="4">
                            <ic:FluentIcon Icon="PlugDisconnected" />
                            <TextBlock Text="Plugins" Margin="8,0,8,0"/>
                        </StackPanel>
                    </ListBoxItem.Content>
                </ListBoxItem>
            </ListBox>
        </Border>

        <!-- Right content area -->
        <ScrollViewer Grid.Column="1" Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Padding="20" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- GENERAL PANEL -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <StackPanel x:Name="GeneralPanel" Visibility="Visible" Spacing="16">
                    <TextBlock Text="General Settings" FontSize="20" FontWeight="SemiBold"/>
                    
                    <!-- Appearance Section -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Appearance" FontWeight="SemiBold" FontSize="14"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="App Theme" FontWeight="SemiBold" Opacity="0.9" VerticalAlignment="Center" Width="160"/>
                                <ComboBox x:Name="AppThemeChoice" Width="160" SelectedIndex="0">
                                    <ComboBoxItem Content="System"/>
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Dark"/>
                                </ComboBox>
                            </StackPanel>
                            <TextBlock Text="Controls the overall appearance of the application UI" Opacity="0.5" FontSize="11" Margin="0,-8,0,0"/>

                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Transparency Stripes" FontWeight="SemiBold" Opacity="0.9" VerticalAlignment="Center" Width="160"/>
                                <ComboBox x:Name="StripeChoice" Width="160" SelectedIndex="0">
                                    <ComboBoxItem Content="System"/>
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Dark"/>
                                </ComboBox>
                            </StackPanel>
                            <TextBlock Text="Controls the transparency pattern shown behind images" Opacity="0.5" FontSize="11" Margin="0,-8,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Storage Section -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Storage &amp; Backup" FontWeight="SemiBold" FontSize="14"/>
                            
                            <StackPanel Spacing="6">
                                <TextBlock Text="Storage Folder" FontWeight="SemiBold" Opacity="0.9"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBox x:Name="StorageFolderBox" Width="360" FontFamily="Consolas" FontSize="12"/>
                                    <Button x:Name="StorageFolderPickBtn" Content="Browse…"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Auto-backup Interval (minutes)" FontWeight="SemiBold" Opacity="0.9" VerticalAlignment="Center"/>
                                <NumberBox x:Name="BackupIntervalBox" Minimum="4" Value="10" Width="100" SpinButtonPlacementMode="Compact"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Backups to Retain (per document)" FontWeight="SemiBold" Opacity="0.9" VerticalAlignment="Center"/>
                                <NumberBox x:Name="MaxBackupCountBox" Minimum="1" Maximum="100" Value="10" Width="100" SpinButtonPlacementMode="Compact"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Logging Section -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Logging" FontWeight="SemiBold" FontSize="14"/>
                            
                            <TextBlock Text="Application logs are stored at:" Opacity="0.7" FontSize="12"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBox x:Name="LogPathBox" IsReadOnly="True" Width="360" FontFamily="Consolas" FontSize="11"/>
                                <Button x:Name="OpenLogFolderBtn" Content="Open…"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <TextBlock Text="Minimum Log Level" VerticalAlignment="Center" Opacity="0.9"/>
                                <ComboBox x:Name="LogLevelCombo" Width="200">
                                    <ComboBoxItem Content="Verbose"/>
                                    <ComboBoxItem Content="Debug"/>
                                    <ComboBoxItem Content="Information"/>
                                    <ComboBoxItem Content="Warning"/>
                                    <ComboBoxItem Content="Error"/>
                                    <ComboBoxItem Content="Fatal"/>
                                </ComboBox>

                                <StackPanel Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Active:" VerticalAlignment="Center" Opacity="0.7" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="CurrentLogLevelText" Text="-" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>

                            <TextBlock Text="Logs are automatically rotated daily and kept for 7 days." 
                                       Opacity="0.5" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- SHORTCUTS PANEL -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <local:ShortcutSettingsPanel x:Name="ShortcutsPanel" Visibility="Collapsed"/>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- PALETTES PANEL -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <StackPanel x:Name="PalettePanel" Visibility="Collapsed" Spacing="16">
                    <TextBlock Text="Palette Settings" FontSize="20" FontWeight="SemiBold"/>
                    
                    <!-- Default Palette Selection -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Default Palette" FontWeight="SemiBold" FontSize="14"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Palette to load on startup:" VerticalAlignment="Center" Opacity="0.9"/>
                                <ComboBox x:Name="DefaultPaletteCombo" Width="280" PlaceholderText="Select a palette..."/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Default sort order:" VerticalAlignment="Center" Opacity="0.9"/>
                                <ComboBox x:Name="DefaultPaletteSortCombo" Width="200">
                                    <ComboBoxItem Content="Default (from palette)"/>
                                    <ComboBoxItem Content="Hue"/>
                                    <ComboBoxItem Content="Saturation"/>
                                    <ComboBoxItem Content="Lightness"/>
                                    <ComboBoxItem Content="Luminance"/>
                                    <ComboBoxItem Content="Red Channel"/>
                                    <ComboBoxItem Content="Green Channel"/>
                                    <ComboBoxItem Content="Blue Channel"/>
                                </ComboBox>
                            </StackPanel>
                            <TextBlock Text="Automatically sort the palette colors when loading a palette at startup or when switching palettes." 
                                       Opacity="0.5" FontSize="11" TextWrapping="Wrap" Margin="0,-4,0,0"/>
                            
                            <TextBlock Text="If the selected palette is unavailable (custom palette deleted), the default PixlPunkt palette will be loaded instead." 
                                       Opacity="0.5" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Swatch Size -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="6">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Swatch Size (pixels)" FontWeight="SemiBold" Opacity="0.9" VerticalAlignment="Center"/>
                                <NumberBox x:Name="PaletteSwatchSizeBox" Minimum="4" Maximum="64" Value="16" Width="100" SpinButtonPlacementMode="Compact"/>
                            </StackPanel>
                            <TextBlock Text="Size of color swatches in the palette panel" Opacity="0.5" FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Custom Palettes -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Custom Palettes" FontWeight="SemiBold" FontSize="14"/>
                            
                            <TextBlock Text="Custom palettes are loaded from:" Opacity="0.7" FontSize="12"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBox x:Name="PalettePathBox" IsReadOnly="True" Width="360" FontFamily="Consolas" FontSize="11"/>
                                <Button x:Name="OpenPaletteFolderBtn" Content="Open…"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                <TextBlock Text="Custom Palettes:" VerticalAlignment="Center" Opacity="0.8"/>
                                <TextBlock x:Name="PaletteCountText" Text="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>

                            <ListView x:Name="PaletteListView" 
                                      MaxHeight="200"
                                      SelectionMode="Single"
                                      Background="{ThemeResource LayerFillColorDefaultBrush}"
                                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="10,6" ColumnDefinitions="*, Auto">
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding InfoDisplay}" Opacity="0.6" FontSize="11"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button x:Name="RefreshPalettesBtn" Content="Refresh"/>
                                <Button x:Name="DeletePaletteBtn" Content="Delete Selected" IsEnabled="False"/>
                            </StackPanel>

                            <TextBlock Text="To create custom palettes, use Palette → Export (Save As Custom) from the menu." 
                                       Opacity="0.5" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- TILES PANEL -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <StackPanel x:Name="TilesPanel" Visibility="Collapsed" Spacing="16">
                    <TextBlock Text="Tile Settings" FontSize="20" FontWeight="SemiBold"/>
                    
                    <!-- Tile Swatch Size -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="6">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="Tile View Size (pixels)" FontWeight="SemiBold" Opacity="0.9" VerticalAlignment="Center"/>
                                <NumberBox x:Name="TileSwatchSizeBox" Minimum="16" Maximum="128" Value="48" Width="100" SpinButtonPlacementMode="Compact"/>
                            </StackPanel>
                            <TextBlock Text="Size of tile previews in the tile panel" Opacity="0.5" FontSize="11"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Default Tile Set -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Default Tile Set" FontWeight="SemiBold" FontSize="14"/>
                            
                            <TextBlock Text="Optionally load a default tile set (.pxpt) for new documents:" Opacity="0.7" FontSize="12"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBox x:Name="DefaultTileSetPathBox" Width="260" FontFamily="Consolas" FontSize="11" PlaceholderText="(none)"/>
                                <Button x:Name="BrowseTileSetBtn" Content="Browse…"/>
                                <Button x:Name="ClearTileSetBtn" Content="Clear"/>
                            </StackPanel>
                            
                            <StackPanel x:Name="TileSetInfoPanel" Orientation="Horizontal" Spacing="8" Visibility="Collapsed">
                                <TextBlock Text="Tile Set:" VerticalAlignment="Center" Opacity="0.8"/>
                                <TextBlock x:Name="TileSetInfoText" Text="" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>
                            
                            <TextBlock Text="If the tile set file is missing or invalid when creating a new document, a warning will be shown and no tile set will be loaded." 
                                       Opacity="0.5" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- BRUSHES PANEL -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <StackPanel x:Name="BrushesPanel" Visibility="Collapsed" Spacing="16">
                    <TextBlock Text="Custom Brushes" FontSize="20" FontWeight="SemiBold"/>
                    
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Custom brushes are loaded from:" Opacity="0.7" FontSize="12"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBox x:Name="BrushPathBox" IsReadOnly="True" Width="360" FontFamily="Consolas" FontSize="11"/>
                                <Button x:Name="OpenBrushFolderBtn" Content="Open…"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                <TextBlock Text="Loaded Brushes:" VerticalAlignment="Center" Opacity="0.8"/>
                                <TextBlock x:Name="BrushCountText" Text="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>

                            <ListView x:Name="BrushListView" 
                                      MaxHeight="200"
                                      SelectionMode="Single"
                                      Background="{ThemeResource LayerFillColorDefaultBrush}"
                                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,6" ColumnDefinitions="Auto, *">
                                            <Image Grid.Column="0" 
                                                   Source="{Binding Icon}" 
                                                   Width="24" Height="24" 
                                                   Stretch="Uniform"
                                                   Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Name}" 
                                                       FontWeight="SemiBold" 
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Button x:Name="RefreshBrushesBtn" Content="Refresh Brushes"/>

                            <StackPanel Spacing="4" Margin="0,8,0,0">
                                <TextBlock Text="To add custom brushes, place .mrk files in the brush folder above." 
                                           Opacity="0.5" FontSize="11"/>
                                <TextBlock Text="You can create custom brushes using File → Export To… → Brush" 
                                           Opacity="0.5" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- TEMPLATES PANEL -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <StackPanel x:Name="TemplatePanel" Visibility="Collapsed" Spacing="16">
                    <TextBlock Text="Custom Templates" FontSize="20" FontWeight="SemiBold"/>
                    
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Custom templates are loaded from:" Opacity="0.7" FontSize="12"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBox x:Name="TemplatePathBox" IsReadOnly="True" Width="360" FontFamily="Consolas" FontSize="11"/>
                                <Button x:Name="OpenTemplateFolderBtn" Content="Open…"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                <TextBlock Text="Custom Templates:" VerticalAlignment="Center" Opacity="0.8"/>
                                <TextBlock x:Name="TemplateCountText" Text="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>

                            <ListView x:Name="TemplateListView" 
                                      MaxHeight="200"
                                      SelectionMode="Single"
                                      Background="{ThemeResource LayerFillColorDefaultBrush}"
                                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="10,6" ColumnDefinitions="*, Auto">
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding DimensionsDisplay}" Opacity="0.6" FontSize="11"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button x:Name="RefreshTemplatesBtn" Content="Refresh"/>
                                <Button x:Name="DeleteTemplateBtn" Content="Delete Selected" IsEnabled="False"/>
                            </StackPanel>

                            <StackPanel Spacing="4" Margin="0,8,0,0">
                                <TextBlock Text="To create custom templates, use 'Save as Template' in the New Canvas dialog." 
                                           Opacity="0.5" FontSize="11"/>
                                <TextBlock Text="Templates are stored as JSON files in the folder above." 
                                           Opacity="0.5" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- PLUGINS PANEL -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <StackPanel x:Name="PluginsPanel" Visibility="Collapsed" Spacing="16">
                    <TextBlock Text="Plugins" FontSize="20" FontWeight="SemiBold"/>
                    
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Plugins are loaded from:" Opacity="0.7" FontSize="12"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBox x:Name="PluginPathBox" IsReadOnly="True" Width="360" FontFamily="Consolas" FontSize="11"/>
                                <Button x:Name="OpenPluginFolderBtn" Content="Open…"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                <TextBlock Text="Loaded Plugins:" VerticalAlignment="Center" Opacity="0.8"/>
                                <TextBlock x:Name="PluginCountText" Text="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>

                            <ListView x:Name="PluginListView" 
                                      MaxHeight="240"
                                      SelectionMode="Single"
                                      Background="{ThemeResource LayerFillColorDefaultBrush}"
                                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="10,6">
                                            <TextBlock Text="{Binding Manifest.Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Button x:Name="RefreshPluginsBtn" Content="Refresh Plugins"/>

                            <StackPanel Spacing="4" Margin="0,8,0,0">
                                <TextBlock Text="To install plugins, place .punk files in the plugins folder above." 
                                           Opacity="0.5" FontSize="11"/>
                                <TextBlock Text="Plugins can add new tools, effects, and other features to PixlPunkt." 
                                           Opacity="0.5" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>
        </ScrollViewer>

        <!-- Footer: persistent Save / Cancel / Apply -->
        <Border Grid.Column="1" Grid.Row="1" 
                Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button x:Name="CancelBtn" Content="Cancel" Width="100"/>
                <Button x:Name="ApplyBtn" Content="Apply" Width="100"/>
                <Button x:Name="SaveBtn" Content="Save" Style="{ThemeResource AccentButtonStyle}" Width="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>