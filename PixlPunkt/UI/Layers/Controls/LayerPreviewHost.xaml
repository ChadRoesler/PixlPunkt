<UserControl
    x:Class="PixlPunkt.UI.Layers.Controls.LayerPreviewHost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml">
    <Grid>
        <!-- Background pattern (DPI aware, zoom independent) -->
        <win2d:CanvasControl x:Name="BgCanvas" Draw="BgCanvas_Draw"/>
        <!-- Foreground preview with preserved alpha -->
        <Image x:Name="PreviewImage"
               Source="{x:Bind Source, Mode=OneWay}"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>
    </Grid>
</UserControl>