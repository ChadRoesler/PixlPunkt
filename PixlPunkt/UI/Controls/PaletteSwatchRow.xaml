<UserControl
    x:Class="PixlPunkt.UI.Controls.PaletteSwatchRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:PixlPunkt.UI.Controls"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
        <!-- Palette container -->
        <Border x:Name="PaletteBox"
                MinHeight="32"
                Height="32"
                MinWidth="32"
                Padding="6,0,6,0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                VerticalAlignment="Center">
            <StackPanel x:Name="SwatchRow"
                        Orientation="Horizontal"
                        Spacing="0"
                        VerticalAlignment="Center" />
        </Border>

        <!-- Action buttons -->
        <StackPanel x:Name="ActionsPanel"
                    Orientation="Horizontal"
                    Spacing="3"
                    VerticalAlignment="Center">
            <Button x:Name="AddBtn"
                    Padding="3"
                    ToolTipService.ToolTip="Add color"
                    Click="AddBtn_Click">
                <FontIcon Glyph="&#xE710;" FontSize="14" />
            </Button>
            <Button x:Name="RampBtn"
                    Padding="3"
                    ToolTipService.ToolTip="Add color ramp"
                    Click="RampBtn_Click">
                <FontIcon Glyph="&#xE8B5;" FontSize="14" />
            </Button>
            <Button x:Name="ReverseBtn"
                    Padding="3"
                    ToolTipService.ToolTip="Reverse palette"
                    Click="ReverseBtn_Click">
                <FontIcon Glyph="&#xE8AB;" FontSize="14" />
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
