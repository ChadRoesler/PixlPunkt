<ContentDialog
    x:Class="PixlPunkt.UI.Dialogs.Export.ExportProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Exporting..."
    CloseButtonText="Cancel"
    DefaultButton="Close"
    IsPrimaryButtonEnabled="False"
    Closing="ContentDialog_Closing">

    <StackPanel Spacing="16" Width="350" Padding="4">
        
        <!-- Status message -->
        <TextBlock x:Name="StatusText" 
                   Text="Preparing export..."
                   TextWrapping="Wrap"/>
        
        <!-- Progress bar -->
        <ProgressBar x:Name="ProgressBarCtrl"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Height="8"/>
        
        <!-- Progress percentage and details -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="DetailsText"
                       Text=""
                       FontSize="12"
                       Opacity="0.7"
                       TextTrimming="CharacterEllipsis"/>
            
            <TextBlock x:Name="PercentText"
                       Grid.Column="1"
                       Text="0%"
                       FontSize="12"
                       Opacity="0.7"/>
        </Grid>
        
        <!-- Elapsed time -->
        <TextBlock x:Name="TimeText"
                   Text=""
                   FontSize="12"
                   Opacity="0.5"/>
        
    </StackPanel>
</ContentDialog>
