<ContentDialog
    x:Class="PixlPunkt.UI.Dialogs.Export.BrushExportDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PixlPunkt.UI.Dialogs.Export"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Export as Custom Brush"
    PrimaryButtonText="Export"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel Spacing="16" MinWidth="360">
        
        <!-- Author -->
        <StackPanel Spacing="4">
            <TextBlock Text="Author" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBox x:Name="AuthorBox" 
                     PlaceholderText="Your name or handle..."
                     Text="Custom"/>
            <TextBlock Text="Used to identify your brushes (e.g., YourName.BrushName)" 
                       Opacity="0.6" 
                       FontSize="12"/>
        </StackPanel>

        <!-- Brush Name -->
        <StackPanel Spacing="4">
            <TextBlock Text="Brush Name" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBox x:Name="BrushNameBox" 
                     PlaceholderText="Enter brush name..."
                     Text="CustomBrush"/>
        </StackPanel>

        <!-- Full Name Preview -->
        <StackPanel Spacing="4">
            <TextBlock Text="Full Identifier" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock x:Name="FullNamePreview" 
                       Text="Custom.CustomBrush"
                       FontFamily="Consolas"
                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
        </StackPanel>

        <!-- Scale Origin (Pivot) -->
        <StackPanel Spacing="8">
            <TextBlock Text="Scale Origin (Pivot)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock Text="Determines where the brush anchors when painting" 
                       Opacity="0.6" 
                       FontSize="12"/>
            
            <!-- 3x3 Pivot Grid -->
            <Grid HorizontalAlignment="Left" Margin="0,4,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="32"/>
                </Grid.ColumnDefinitions>

                <!-- Row 0: Top -->
                <RadioButton x:Name="PivotTL" Grid.Row="0" Grid.Column="0" 
                             GroupName="Pivot" ToolTipService.ToolTip="Top-Left"
                             MinWidth="0" Padding="0" 
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <RadioButton x:Name="PivotTC" Grid.Row="0" Grid.Column="1" 
                             GroupName="Pivot" ToolTipService.ToolTip="Top-Center"
                             MinWidth="0" Padding="0"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <RadioButton x:Name="PivotTR" Grid.Row="0" Grid.Column="2" 
                             GroupName="Pivot" ToolTipService.ToolTip="Top-Right"
                             MinWidth="0" Padding="0"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Row 1: Middle -->
                <RadioButton x:Name="PivotML" Grid.Row="1" Grid.Column="0" 
                             GroupName="Pivot" ToolTipService.ToolTip="Middle-Left"
                             MinWidth="0" Padding="0"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <RadioButton x:Name="PivotMC" Grid.Row="1" Grid.Column="1" 
                             GroupName="Pivot" ToolTipService.ToolTip="Center"
                             MinWidth="0" Padding="0" IsChecked="True"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <RadioButton x:Name="PivotMR" Grid.Row="1" Grid.Column="2" 
                             GroupName="Pivot" ToolTipService.ToolTip="Middle-Right"
                             MinWidth="0" Padding="0"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Row 2: Bottom -->
                <RadioButton x:Name="PivotBL" Grid.Row="2" Grid.Column="0" 
                             GroupName="Pivot" ToolTipService.ToolTip="Bottom-Left"
                             MinWidth="0" Padding="0"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <RadioButton x:Name="PivotBC" Grid.Row="2" Grid.Column="1" 
                             GroupName="Pivot" ToolTipService.ToolTip="Bottom-Center"
                             MinWidth="0" Padding="0"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <RadioButton x:Name="PivotBR" Grid.Row="2" Grid.Column="2" 
                             GroupName="Pivot" ToolTipService.ToolTip="Bottom-Right"
                             MinWidth="0" Padding="0"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>

        <!-- Icon Preview (Outline) -->
        <StackPanel Spacing="8">
            <TextBlock Text="Icon Preview (Outline)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock Text="Generated from brush shape outline" 
                       Opacity="0.6" 
                       FontSize="12"/>
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Width="96" Height="96"
                    HorizontalAlignment="Left">
                <Image x:Name="IconPreview" 
                       Width="64" Height="64"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Tier Status -->
        <StackPanel Spacing="8">
            <TextBlock Text="Canvas Size Requirement" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <FontIcon x:Name="Tier16Icon" Glyph="&#xE73E;" FontSize="14"/>
                <TextBlock x:Name="Tier16Text" Text="16px canvas required" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Validation message -->
            <TextBlock x:Name="ValidationMessage" 
                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                       FontSize="12"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
        </StackPanel>

    </StackPanel>
</ContentDialog>
