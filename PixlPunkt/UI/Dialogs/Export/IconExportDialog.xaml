<ContentDialog
    x:Class="PixlPunkt.UI.Dialogs.Export.IconExportDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Export Icon (.ico)"
    PrimaryButtonText="Export"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Scale Mode Selection -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Padding="4" Margin="0,0,0,12">
            <TextBlock Text="Resampling:" VerticalAlignment="Center" />
            <ComboBox x:Name="ScaleModeCombo" 
                          Width="220" 
                          SelectionChanged="ScaleModeCombo_SelectionChanged" />
        </StackPanel>

        <!-- Preview Header -->
        <StackPanel Grid.Row="1" Spacing="4" Padding="4,0,4,8">
            <TextBlock Text="Preview" FontWeight="SemiBold" />
            <TextBlock Text="Each size shown on: Transparency, White, Grey, Black backgrounds" 
                           Opacity="0.7" 
                           FontSize="11" />
            <TextBlock Text="(256×256 and 128×128 will be included in export but not shown in preview)" 
                           Opacity="0.6" 
                           FontSize="10"
                           FontStyle="Italic" />
        </StackPanel>

        <!-- Preview Content with ScrollViewer -->
        <ScrollViewer Grid.Row="3"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Padding="4">
            <StackPanel x:Name="PreviewStack" 
                            Orientation="Horizontal" 
                            Spacing="12"
                            HorizontalAlignment="Center" />
        </ScrollViewer>
    </Grid>
</ContentDialog>
