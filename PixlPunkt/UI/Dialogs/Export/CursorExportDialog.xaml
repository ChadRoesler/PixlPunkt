<ContentDialog
    x:Class="PixlPunkt.UI.Dialogs.Export.CursorExportDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Export Cursor (.cur)"
    PrimaryButtonText="Export"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <ScrollViewer MaxHeight="600" VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16" Padding="4">

            <!-- Export Options Section -->
            <StackPanel Spacing="10">
                <TextBlock Text="Cursor Export" FontWeight="Bold" />

                <!-- Scale Mode -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Scale Mode:" VerticalAlignment="Center" />
                    <ComboBox x:Name="ScaleModeCombo" Width="200" SelectionChanged="ScaleModeCombo_SelectionChanged" />
                </StackPanel>

                <!-- Export Options -->
                <CheckBox x:Name="SeparateLayersCheck" Content="Export each layer as separate cursor (.cur)" />
                <CheckBox x:Name="MultiResolutionCheck" Content="Multi-resolution cursor (32×32, 48×48, 64×64, 128×128)" />
            </StackPanel>

            <!-- Preview Section -->
            <StackPanel Spacing="12">
                <TextBlock Text="Preview &amp; Hotspot" FontWeight="Bold" />

                <StackPanel Orientation="Horizontal" Spacing="16">

                    <!-- Actual Size Previews -->
                    <StackPanel Spacing="4">
                        <TextBlock x:Name="ActualSizeLabel" Opacity="0.8" />
                        <Border x:Name="ActualStripedBorder" BorderBrush="Gray" BorderThickness="1">
                            <Image x:Name="ActualImageStriped" Stretch="None" />
                        </Border>
                        <Border x:Name="ActualWhiteBorder" BorderBrush="Gray" BorderThickness="1" Margin="0,4,0,0">
                            <Image x:Name="ActualImageWhite" Stretch="None" />
                        </Border>
                        <Border x:Name="ActualGreyBorder" BorderBrush="Gray" BorderThickness="1" Margin="0,4,0,0">
                            <Image x:Name="ActualImageGrey" Stretch="None" />
                        </Border>
                        <Border x:Name="ActualBlackBorder" BorderBrush="Gray" BorderThickness="1" Margin="0,4,0,0">
                            <Image x:Name="ActualImageBlack" Stretch="None" />
                        </Border>
                    </StackPanel>

                    <!-- Enlarged Preview with Hotspot -->
                    <StackPanel Spacing="6">
                        <TextBlock x:Name="EnlargedSizeLabel" Opacity="0.8" />
                        <Border x:Name="EnlargedBorder" BorderBrush="Black" BorderThickness="2" Background="Black">
                            <Grid x:Name="EnlargedHost">
                                <!-- Base image -->
                                <Image x:Name="EnlargedImage" Stretch="Fill" />

                                <!-- Grid overlay -->
                                <Canvas x:Name="GridOverlay" IsHitTestVisible="False" />

                                <!-- Hit test canvas for hotspot selection -->
                                <Canvas x:Name="HitCanvas" Background="Transparent" 
                                        PointerPressed="HitCanvas_PointerPressed"
                                        PointerMoved="HitCanvas_PointerMoved"
                                        PointerExited="HitCanvas_PointerExited" />

                                <!-- Hotspot highlight (solid outline) -->
                                <Canvas x:Name="HighlightLayer" IsHitTestVisible="False">
                                    <Border x:Name="HighlightBorder" 
                                            BorderThickness="2" 
                                            CornerRadius="2" 
                                            BorderBrush="Black"
                                            Background="Transparent" />
                                </Canvas>

                                <!-- Hover indicator (X mark) -->
                                <Canvas x:Name="HoverLayer" IsHitTestVisible="False">
                                    <Canvas x:Name="HoverContainer" Visibility="Collapsed">
                                        <Border x:Name="HoverBorder" 
                                                BorderThickness="1" 
                                                CornerRadius="1" 
                                                BorderBrush="White"
                                                Background="Transparent" />
                                        <Line x:Name="HoverLineX1" StrokeThickness="1" Stroke="White" />
                                        <Line x:Name="HoverLineX2" StrokeThickness="1" Stroke="White"/>
                                    </Canvas>
                                </Canvas>
                            </Grid>
                        </Border>
                        <TextBlock 
                            Text="Click a cell to set hotspot (solid outline). Hover shows an X." 
                            Opacity="0.7" 
                            TextWrapping="Wrap" 
                            MaxWidth="320" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
