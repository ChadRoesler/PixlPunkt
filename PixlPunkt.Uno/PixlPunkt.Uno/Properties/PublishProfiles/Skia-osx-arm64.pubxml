<?xml version="1.0" encoding="utf-8"?>
<!--
  Publish Profile: macOS ARM64 (Apple Silicon M1/M2/M3) - Skia Desktop
  
  Usage:
    dotnet publish -p:PublishProfile=Skia-osx-arm64
    
  Or from command line:
    dotnet publish PixlPunkt.Uno/PixlPunkt.Uno/PixlPunkt.Uno.csproj -c Release -f net10.0-desktop -r osx-arm64 --self-contained -o bin/publish/osx-arm64 -p:SkiaOnly=true
    
  Output: bin/publish/osx-arm64/
  
  After publishing, make the executable runnable:
    chmod +x bin/publish/osx-arm64/PixlPunkt.Uno
  
  Note: This is for Apple Silicon Macs (M1/M2/M3). For Intel Macs, use Skia-osx-x64.pubxml
-->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <PublishProtocol>FileSystem</PublishProtocol>
    <Configuration>Release</Configuration>
    <Platform>ARM64</Platform>
    <TargetFramework>net10.0-desktop</TargetFramework>
    <RuntimeIdentifier>osx-arm64</RuntimeIdentifier>
    <PublishDir>bin\publish\osx-arm64\</PublishDir>
    <SelfContained>true</SelfContained>
    <PublishSingleFile>false</PublishSingleFile>
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishTrimmed>false</PublishTrimmed>
    
    <!-- Skia-specific settings -->
    <SkiaOnly>true</SkiaOnly>
  </PropertyGroup>
</Project>
