<?xml version="1.0" encoding="utf-8"?>
<!--
  Publish Profile: macOS x64 (Intel) - Skia Desktop
  
  Usage:
    dotnet publish -p:PublishProfile=Skia-osx-x64
    
  Or from command line:
    dotnet publish PixlPunkt.Uno/PixlPunkt.Uno/PixlPunkt.Uno.csproj -c Release -f net10.0-desktop -r osx-x64 --self-contained -o bin/publish/osx-x64 -p:SkiaOnly=true
    
  Output: bin/publish/osx-x64/
  
  After publishing, make the executable runnable:
    chmod +x bin/publish/osx-x64/PixlPunkt.Uno
  
  Note: This is for Intel Macs. For Apple Silicon (M1/M2/M3), use Skia-osx-arm64.pubxml
-->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <PublishProtocol>FileSystem</PublishProtocol>
    <Configuration>Release</Configuration>
    <Platform>x64</Platform>
    <TargetFramework>net10.0-desktop</TargetFramework>
    <RuntimeIdentifier>osx-x64</RuntimeIdentifier>
    <PublishDir>bin\publish\osx-x64\</PublishDir>
    <SelfContained>true</SelfContained>
    <PublishSingleFile>false</PublishSingleFile>
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishTrimmed>false</PublishTrimmed>
    
    <!-- Skia-specific settings -->
    <SkiaOnly>true</SkiaOnly>
  </PropertyGroup>
</Project>
