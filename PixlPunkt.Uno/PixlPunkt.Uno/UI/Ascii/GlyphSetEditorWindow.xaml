<Window
    x:Class="PixlPunkt.Uno.UI.Ascii.GlyphSetEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:conv="using:PixlPunkt.Uno.UI.Converters"
    xmlns:local="using:PixlPunkt.Uno.UI.Ascii"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Glyph Set Editor">

    <Grid Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" Padding="16">
        <Grid.Resources>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <conv:LevelToIndentConverter x:Key="DepthToMarginConverter" Indent="16"/>
            
            <!-- Folder Template -->
            <DataTemplate x:Key="FolderTemplate">
                <Grid Padding="4" Margin="{Binding Depth, Converter={StaticResource DepthToMarginConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Expand/Collapse Toggle -->
                    <ToggleButton 
                        x:Name="FolderChevron"
                        Grid.Column="0"
                        IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                        Padding="2"
                        MinWidth="24"
                        MinHeight="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,0,4,0"
                        Click="FolderChevron_Click">
                        <Grid>
                            <ic:FluentIcon 
                                Icon="ChevronDown" 
                                FontSize="12"
                                Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <ic:FluentIcon 
                                Icon="ChevronRight" 
                                FontSize="12"
                                Visibility="{Binding IsExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        </Grid>
                    </ToggleButton>
                    
                    <!-- Folder Icon and Name -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <ic:FluentIcon 
                            Icon="Folder" 
                            FontSize="14"
                            Margin="0,0,8,0"/>
                        <TextBlock 
                            Text="{Binding Name}" 
                            FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!-- Lock icon for built-in folder -->
                    <ic:FluentIcon 
                        Grid.Column="2"
                        Icon="LockClosed" 
                        FontSize="12"
                        Margin="0,0,4,0"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Visibility="{Binding IsBuiltInFolder, Converter={StaticResource BoolToVisibilityConverter}}"
                        ToolTipService.ToolTip="Built-in (read-only)"/>
                </Grid>
            </DataTemplate>
            
            <!-- Glyph Set Item Template -->
            <DataTemplate x:Key="ItemTemplate">
                <Grid Padding="4" Margin="{Binding Depth, Converter={StaticResource DepthToMarginConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock 
                        Grid.Column="0"
                        Text="{Binding Name}" 
                        VerticalAlignment="Center"
                        Margin="28,0,0,0"/>
                    
                    <ic:FluentIcon 
                        Grid.Column="1"
                        Icon="LockClosed" 
                        FontSize="12"
                        Margin="0,0,4,0"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}"
                        ToolTipService.ToolTip="Built-in (read-only)"/>
                </Grid>
            </DataTemplate>
            
            <local:GlyphSetItemTemplateSelector 
                x:Key="GlyphSetTemplateSelector"
                FolderTemplate="{StaticResource FolderTemplate}"
                ItemTemplate="{StaticResource ItemTemplate}"/>
        </Grid.Resources>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL - Glyph Set List with Folders -->
        <Grid Grid.Column="0" Margin="0,0,16,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock 
                Grid.Row="0" 
                Text="Glyph Sets" 
                Style="{ThemeResource SubtitleTextBlockStyle}"
                Margin="0,0,0,8"/>

            <ListView 
                x:Name="GlyphSetList"
                Grid.Row="1"
                SelectionMode="Single"
                SelectionChanged="GlyphSetList_SelectionChanged"
                ItemTemplateSelector="{StaticResource GlyphSetTemplateSelector}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="MinHeight" Value="32"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <StackPanel 
                Grid.Row="2" 
                Orientation="Horizontal" 
                Spacing="4"
                Margin="0,8,0,0">
                <Button 
                    x:Name="NewSetBtn"
                    ToolTipService.ToolTip="Create new glyph set"
                    Click="NewSetBtn_Click"
                    Padding="8">
                    <ic:FluentIcon Icon="Add" FontSize="16"/>
                </Button>
                <Button 
                    x:Name="NewFolderBtn"
                    ToolTipService.ToolTip="Create new folder"
                    Click="NewFolderBtn_Click"
                    Padding="8">
                    <ic:FluentIcon Icon="FolderAdd" FontSize="16"/>
                </Button>
                <Button 
                    x:Name="DuplicateBtn"
                    ToolTipService.ToolTip="Duplicate selected set"
                    Click="DuplicateBtn_Click"
                    Padding="8">
                    <ic:FluentIcon Icon="Copy" FontSize="16"/>
                </Button>
                <Button 
                    x:Name="DeleteSetBtn"
                    ToolTipService.ToolTip="Delete selected item"
                    Click="DeleteSetBtn_Click"
                    Padding="8">
                    <ic:FluentIcon Icon="Delete" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- RIGHT PANEL - Glyph Editor -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Set Properties -->
            <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Name:" VerticalAlignment="Center" Width="80"/>
                    <TextBox 
                        x:Name="SetNameBox"
                        Width="200"
                        PlaceholderText="Glyph set name"
                        TextChanged="SetNameBox_TextChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Glyph Size:" VerticalAlignment="Center" Width="80"/>
                    <ComboBox 
                        x:Name="GlyphSizeCombo"
                        Width="100"
                        SelectionChanged="GlyphSizeCombo_SelectionChanged">
                        <ComboBoxItem Content="4 x 4" Tag="4"/>
                        <ComboBoxItem Content="6 x 6" Tag="6"/>
                        <ComboBoxItem Content="8 x 8" Tag="8"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Ramp:" VerticalAlignment="Center" Width="80"/>
                    <TextBox 
                        x:Name="RampBox"
                        Width="300"
                        PlaceholderText="Characters light to dark"
                        TextChanged="RampBox_TextChanged"/>
                    <TextBlock 
                        x:Name="RampCountLabel"
                        Text="(0 glyphs)"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>

            <!-- Glyph Selector -->
            <StackPanel Grid.Row="1" Margin="0,0,0,8">
                <TextBlock Text="Glyphs" Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,0,0,4"/>
                <ScrollViewer 
                    HorizontalScrollBarVisibility="Auto" 
                    VerticalScrollBarVisibility="Disabled"
                    Height="60">
                    <ItemsControl x:Name="GlyphSelector">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton 
                                    Width="40" 
                                    Height="40"
                                    Padding="0"
                                    Click="GlyphToggleButton_Click"
                                    Tag="{Binding Index}"
                                    IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                    <TextBlock 
                                        Text="{Binding Character}"
                                        FontFamily="Consolas"
                                        FontSize="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </ToggleButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <!-- Bitmap Editor Grid -->
            <Border 
                Grid.Row="2"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bitmap Grid -->
                    <Grid 
                        x:Name="BitmapGrid"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <!-- Preview and Controls -->
                    <StackPanel 
                        Grid.Column="1" 
                        Width="150"
                        Margin="16,0,0,0"
                        Spacing="16">
                        
                        <StackPanel>
                            <TextBlock Text="Preview" Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,0,0,8"/>
                            <Border 
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Width="100"
                                Height="100"
                                HorizontalAlignment="Left">
                                <Grid x:Name="PreviewGrid"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="Tools" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <Button 
                                x:Name="ClearBitmapBtn"
                                Content="Clear"
                                Click="ClearBitmapBtn_Click"
                                HorizontalAlignment="Stretch"/>
                            <Button 
                                x:Name="FillBitmapBtn"
                                Content="Fill"
                                Click="FillBitmapBtn_Click"
                                HorizontalAlignment="Stretch"/>
                            <Button 
                                x:Name="InvertBitmapBtn"
                                Content="Invert"
                                Click="InvertBitmapBtn_Click"
                                HorizontalAlignment="Stretch"/>
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="Current Glyph" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <TextBlock 
                                x:Name="CurrentGlyphLabel"
                                Text="(none)"
                                FontFamily="Consolas"
                                FontSize="24"
                                HorizontalAlignment="Center"/>
                            <TextBlock 
                                x:Name="CurrentGlyphIndexLabel"
                                Text="Index: -"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer -->
            <StackPanel 
                Grid.Row="3" 
                Orientation="Horizontal" 
                HorizontalAlignment="Right" 
                Spacing="8"
                Margin="0,12,0,0">
                
                <Button 
                    x:Name="ExportBtn"
                    Content="Export..."
                    Click="ExportBtn_Click"/>
                <Button 
                    x:Name="ImportBtn"
                    Content="Import..."
                    Click="ImportBtn_Click"/>
                <Button 
                    x:Name="SaveBtn"
                    Content="Save"
                    Click="SaveBtn_Click"
                    Style="{ThemeResource AccentButtonStyle}"/>
                <Button 
                    Content="Close" 
                    Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
