<!--
═══════════════════════════════════════════════════════════════════════════════
  TOOL OPTIONS BAR - Dynamic Tool Configuration Panel
═══════════════════════════════════════════════════════════════════════════════
  Displays context-sensitive tool options based on the currently selected tool.
  
  Architecture:
    • DynamicOptionsPanel - Dynamic UI generated from IToolOption descriptors
    • Each tool's GetOptions() method returns option descriptors
    • ToolOptionFactory creates WinUI controls from descriptors
    
  This enables plugin extensibility and consistent UI generation across all tools.
═══════════════════════════════════════════════════════════════════════════════
-->
<UserControl
    x:Class="PixlPunkt.Uno.UI.Tools.ToolOptionsBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ic="using:FluentIcons.WinUI">

    <Grid x:Name="Root">
        <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- CURRENT TOOL ICON                                           -->
            <!-- Shows the icon of the currently effective tool.            -->
            <!-- ═══════════════════════════════════════════════════════════ -->
            <Border
                x:Name="ToolIconBorder"
                Width="36"
                Height="36"
                CornerRadius="8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                VerticalAlignment="Center">
                <ic:FluentIcon
                    x:Name="ToolSymbol"
                    Icon="Edit"
                    Style="{StaticResource ToolRailIcon}" />
            </Border>

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- DYNAMIC OPTIONS PANEL                                       -->
            <!-- Populated at runtime from tool's GetOptions() descriptors.  -->
            <!-- ═══════════════════════════════════════════════════════════ -->
            <StackPanel
                x:Name="DynamicOptionsPanel"
                Orientation="Horizontal"
                Spacing="12"
                VerticalAlignment="Center"
                Visibility="Collapsed" />

        </StackPanel>
    </Grid>
</UserControl>
