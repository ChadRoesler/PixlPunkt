<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="PixlPunkt.Uno.UI.Dialogs.ImportTilesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ic="using:FluentIcons.WinUI"
    Title="Import Tiles from Document"
    PrimaryButtonText="Import"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    IsPrimaryButtonEnabled="{Binding HasSelection}">

    <StackPanel Spacing="12" MinWidth="400">
        <!-- Source Document Selection -->
        <ComboBox x:Name="DocumentCombo"
                  Header="Source Document"
                  ItemsSource="{Binding Documents}"
                  SelectedItem="{Binding SelectedDocument, Mode=TwoWay}"
                  SelectionChanged="DocumentCombo_SelectionChanged"
                  HorizontalAlignment="Stretch"
                  PlaceholderText="Select a document...">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ic:FluentIcon Icon="Document" FontSize="14"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding TileCountText}" Opacity="0.6"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Tile Size Compatibility Warning -->
        <InfoBar x:Name="SizeWarning"
                 IsOpen="False"
                 Severity="Warning"
                 Title="Tile Size Mismatch"
                 Message="Source tiles will be scaled to fit."
                 IsClosable="False"/>

        <!-- Tile Selection -->
        <TextBlock Text="Select Tiles to Import" FontWeight="SemiBold" Margin="0,8,0,0"/>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="SelectionSummary" 
                       Text="No tiles selected" 
                       Opacity="0.6"
                       VerticalAlignment="Center"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                <Button Content="All" Click="SelectAll_Click" Padding="8,4"/>
                <Button Content="None" Click="SelectNone_Click" Padding="8,4"/>
            </StackPanel>
        </Grid>

        <!-- Tile Grid with Checkboxes -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="8"
                MaxHeight="300">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="TileGrid" ItemsSource="{Binding TileItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid Orientation="Horizontal"
                                      ItemWidth="64"
                                      ItemHeight="80"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4">
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Checked="TileCheckBox_Changed"
                                          Unchecked="TileCheckBox_Changed"
                                          HorizontalAlignment="Center"/>
                                <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Width="48"
                                        Height="48"
                                        HorizontalAlignment="Center">
                                    <Image Source="{Binding Preview}" 
                                           Stretch="Uniform"/>
                                </Border>
                                <TextBlock Text="{Binding IdText}" 
                                           FontSize="10"
                                           Opacity="0.6"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Import Options -->
        <CheckBox x:Name="DuplicateHandling"
                  Content="Skip duplicate tiles (by pixel comparison)"
                  IsChecked="True"/>
    </StackPanel>
</ContentDialog>
