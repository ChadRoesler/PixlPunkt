<Window
    x:Class="PixlPunkt.Uno.UI.CanvasArea.DocumentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="using:PixlPunkt.Uno.UI.Controls">

    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="Auto"/>
            <!-- Strip -->
            <RowDefinition Height="*"/>
            <!-- Canvas -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <MenuBar Grid.Row="0">
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="Close Window" Click="File_Close_Click"/>
            </MenuBarItem>
            <MenuBarItem Title="View">
                <MenuFlyoutItem Text="Fit to Screen (Ctrl+0)" Click="View_Fit_Click"/>
                <MenuFlyoutItem Text="Actual Size (Ctrl+1)" Click="View_Actual_Click"/>
                <MenuFlyoutItem Text="Toggle Pixel Grid" Click="View_TogglePixelGrid_Click"/>
                <MenuFlyoutItem Text="Toggle Tile Grid" Click="View_ToggleTileGrid_Click"/>
            </MenuBarItem>
        </MenuBar>

        <!-- Small strip with Undo/Redo -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Padding="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Button x:Name="UndoBtn" Content="↶ Undo" Click="UndoBtn_Click" IsEnabled="False"/>
            <Button x:Name="RedoBtn" Content="↷ Redo" Click="RedoBtn_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Host goes here at runtime -->
        <Border Grid.Row="2" x:Name="HostPlaceholder" />
    </Grid>
</Window>
