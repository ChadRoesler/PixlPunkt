<UserControl
    x:Class="PixlPunkt.Uno.UI.CanvasArea.SelectionOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Canvas x:Name="Root" IsHitTestVisible="False">
        <!-- two dashed rectangles offset to fake “ants” -->
        <Rectangle x:Name="R1" Stroke="White" StrokeThickness="1"
                   StrokeDashArray="3,3" IsHitTestVisible="False"/>
        <Rectangle x:Name="R2" Stroke="Black" StrokeThickness="1"
                   StrokeDashArray="3,3" IsHitTestVisible="False"/>
        <!-- 8 resize handles + 1 rotate (top-center, offset up) -->
        <Rectangle x:Name="HNW" Width="6" Height="6" Fill="White" Stroke="Black" StrokeThickness="1"/>
        <Rectangle x:Name="HN"  Width="6" Height="6" Fill="White" Stroke="Black" StrokeThickness="1"/>
        <Rectangle x:Name="HNE" Width="6" Height="6" Fill="White" Stroke="Black" StrokeThickness="1"/>
        <Rectangle x:Name="HW"  Width="6" Height="6" Fill="White" Stroke="Black" StrokeThickness="1"/>
        <Rectangle x:Name="HE"  Width="6" Height="6" Fill="White" Stroke="Black" StrokeThickness="1"/>
        <Rectangle x:Name="HSW" Width="6" Height="6" Fill="White" Stroke="Black" StrokeThickness="1"/>
        <Rectangle x:Name="HS"  Width="6" Height="6" Fill="White" Stroke="Black" StrokeThickness="1"/>
        <Rectangle x:Name="HSE" Width="6" Height="6" Fill="White" Stroke="Black" StrokeThickness="1"/>
        <Ellipse   x:Name="HROT" Width="8" Height="8" Fill="White" Stroke="Black" StrokeThickness="1"/>
    </Canvas>
</UserControl>
