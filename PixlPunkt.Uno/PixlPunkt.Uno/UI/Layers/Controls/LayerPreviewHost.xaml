<UserControl
    x:Class="PixlPunkt.Uno.UI.Layers.Controls.LayerPreviewHost"
    x:Name="root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Background pattern container (DPI aware, zoom independent) - element created in code-behind -->
        <Grid x:Name="BgCanvasContainer"/>
        <!-- Foreground preview with preserved alpha -->
        <Image x:Name="PreviewImage"
               Source="{Binding Source, ElementName=root, Mode=OneWay}"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>
    </Grid>
</UserControl>
