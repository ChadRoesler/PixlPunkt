<UserControl
    x:Class="PixlPunkt.Uno.UI.Layers.Controls.LayerPreviewHost"
    x:Name="root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:skia="using:SkiaSharp.Views.Windows">
    <Grid>
        <!-- Background pattern (DPI aware, zoom independent) -->
        <skia:SKXamlCanvas x:Name="BgCanvas" PaintSurface="BgCanvas_PaintSurface"/>
        <!-- Foreground preview with preserved alpha -->
        <Image x:Name="PreviewImage"
               Source="{Binding Source, ElementName=root, Mode=OneWay}"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>
    </Grid>
</UserControl>
