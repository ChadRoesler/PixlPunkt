<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="PixlPunkt.Uno.UI.Animation.TileFrameEditorCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:skia="using:SkiaSharp.Views.Windows"
    IsTabStop="True"
    KeyDown="EditorCanvas_KeyDown"
    KeyUp="EditorCanvas_KeyUp">

    <Grid Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
        <!-- SkiaSharp canvas for editing -->
        <skia:SKXamlCanvas x:Name="EditorCanvas"
                           PaintSurface="EditorCanvas_PaintSurface"
                           PointerPressed="EditorCanvas_PointerPressed"
                           PointerMoved="EditorCanvas_PointerMoved"
                           PointerReleased="EditorCanvas_PointerReleased"
                           PointerExited="EditorCanvas_PointerExited"
                           PointerWheelChanged="EditorCanvas_PointerWheelChanged"/>
        
        <!-- Empty state text when no tile is selected -->

    </Grid>
</UserControl>